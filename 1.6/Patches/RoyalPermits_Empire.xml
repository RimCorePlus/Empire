<Patch>
    <!--glitter med drop changes-->
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="GlitterMedDrop"]/description/text()</xpath>
        <value>Call for a drop of 10 glitterworld medicine.</value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="GlitterMedDrop"]/royalAid/itemsToDrop/MedicineUltratech/text()</xpath>
        <value>10</value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>//RoyalTitlePermitDef[defName="GlitterMedDrop"]</xpath>
        <value>
            <cooldownDays Inherit="False">60</cooldownDays>
        </value>
    </Operation>
    <!--reorder vanilla permits-->
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="CallMilitaryAidLarge"]/uiPosition/text()</xpath>
        <value>(1,3)</value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="CallMilitaryAidGrand"]/uiPosition/text()</xpath>
        <value>(2,3)</value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="CallTransportShuttle"]/uiPosition/text()</xpath>
        <value>(0,5)</value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="CallOrbitalStrike"]/uiPosition/text()</xpath>
        <value>(1,5)</value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="CallOrbitalSalvo"]/uiPosition/text()</xpath>
        <value>(2,5)</value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>//RoyalTitlePermitDef[defName="GlitterMedDrop"]/uiPosition/text()</xpath>
        <value>(0,6)</value>
    </Operation>
</Patch>